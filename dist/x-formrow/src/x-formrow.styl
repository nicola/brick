@import 'mixins'
@import 'params'

x-formrow {
  width: 100%;
  margin-bottom: 12px;
  box-sizing: border-box;
  display: block;
  label {
    flexbox();
    text-align: right;
    vertical-align: baseline;
    & > span {
      flex(1);
      padding-right: 15px;
    }
  }
  input {
    flex(2);
    vertical-align: baseline;
  }
}